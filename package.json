{
  "name": "chia-puzzle-framework",
  "version": "1.0.0",
  "description": "TypeScript abstraction layer for ChiaLisp smart contract development",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf dist",
    "prebuild": "npm run clean",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "chia",
    "blockchain",
    "smart-contracts",
    "chialisp",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/chia-puzzle-framework"
  },
  "dependencies": {
    "@dignetwork/datalayer-driver": "^0.1.34",
    "@msgpack/msgpack": "^3.0.0-beta2",
    "@noble/hashes": "^1.8.0",
    "bip39": "^3.1.0",
    "bls-signatures": "^2.0.3",
    "buffer": "^6.0.3",
    "chevrotain": "^11.0.3",
    "clvm-lib": "^1.0.1",
    "crypto-js": "^4.2.0",
    "js-sha256": "^0.10.1",
    "merkletreejs": "^0.3.11"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.1",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "eslint": "^8.57.1",
    "jest": "^29.7.0",
    "prettier": "^3.6.1",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
