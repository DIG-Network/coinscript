(mod (x y data)
  
  (include opcodes.clib)
  (include condition_codes.clib)
  
  ; Use various opcode constants
  (CONS
    ; Arithmetic operation using constants
    (MULTIPLY
      (ADD x y)
      (int 2))
    
    (CONS
      ; Comparison using constants
      (IF (GT x y)
        "x is greater"
        "y is greater or equal")
      
      (CONS
        ; Crypto operation
        (SHA256 data)
        
        ; Create a coin using half the amount
        (list
          CREATE_COIN
          0x1234567890abcdef1234567890abcdef1234567890abcdef1234567890abcdef
          (DIVIDE x (int 2))
        )
      )
    )
  )
)